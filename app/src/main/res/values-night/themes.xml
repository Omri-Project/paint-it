<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PaintIt.Dark" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:fontFamily">@font/pixlated</item>
        <item name="background">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_500</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.PaintIt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PaintIt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PaintIt.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="PreferenceScreen" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/purple_500</item>
    </style>
</resources>
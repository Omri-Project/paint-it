<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PaintIt" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/pixlated</item>
        <item name="textAppearanceButton">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_500</item>
    </style>

    <style name="Theme.PaintIt.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="backgroundTint">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:fontFamily">@font/pixlated</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="textAppearanceButton">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_500</item>
    </style>



    <style name="Theme.PaintIt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PaintIt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PreferenceScreen" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/purple_500</item>
    </style>
</resources>